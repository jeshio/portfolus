<!-- Форма авторизации -->
<div flex-offset-gt-md="30" flex-gt-md="40" flex="100">

  <h1 class="md-headline">Авторизация</h1>

  <form ng-submit="login()" name="User" novalidate="">

    <md-input-container class="md-icon-float md-block">
      <label>E-mail</label>
      <input ng-model="user.email" name="email" require type="text">
    </md-input-container>

    <md-input-container class="md-icon-float md-block">
      <label>Пароль</label>
      <input ng-model="user.password" name="password" require type="password">
    </md-input-container>

    <md-input-container class="md-icon-float md-block">
      <div ng-messages="errors" role="alert" md-auto-hide="false">
        <span ng-show="User.$submitted">
          <div ng-messages-include="errorMessages.html" ></div>
        </span>
      </div>
  </md-input-container>

    <div class="text-center">
      <md-button class="btn" type="submit" name="enter-button">Войти</md-button>
    </div>
  </form>

</div>

<span flex></span>
